<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DataTemplate x:Key="RadioButtonTemplate">
        <Button Command="{Binding ClickCommand}" Margin="30,0,0,0" Background="Transparent" BorderBrush="Transparent">
            <Border Background="{Binding BackgroundColor}" Width="150" Height="150" CornerRadius="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="{Binding Favicon}" Width="80" Height="80"/>
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="10" />
                </StackPanel>
            </Border>
        </Button>
    </DataTemplate>
    
</ResourceDictionary>